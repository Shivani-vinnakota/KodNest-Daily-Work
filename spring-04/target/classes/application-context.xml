<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="trainer1" class="com.kn.bean.Trainer">
    <property name="id" value="1234"/>
    <property name="name" value="Anthony"/>
    <property name="salary" value="1234.25"/>
</bean>

<bean id="university" class="com.kn.bean.University">
    <property name="id" value="111"/>
    <property name="name" value="RGUKT"/>
    <property name="trainer" ref="trainer1"></property>
</bean>

</beans>